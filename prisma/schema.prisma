// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  email String @unique
  hash  String

  firstName      String?
  lastName       String?
  patronymicName String?

  bookmarks Bookmark[]

  // Сопоставляет имя модели схемы Prisma с таблицей (реляционные базы данных) или 
  // коллекцией (MongoDB) с другим именем в базе данных. 
  // Если вы не используете @@map, имя модели будет точно соответствовать имени 
  // таблицы (реляционные базы данных) или коллекции (MongoDB).
  @@map("users")
}

model Bookmark {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  title       String
  description String?
  link        String

  // userId Int
  user   User   @relation(fields: [userId], references: [id])
  userId String @db.ObjectId

  @@map("bookmarks")
}
